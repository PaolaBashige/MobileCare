<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    tools:context=".Activities.PatientActivity.Services">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/set_service_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_weight="0"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:text="Please select the service to provide"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/set_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_weight="0"
            android:background="@drawable/button_shape"
            android:ellipsize="none"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Set Availability for Appointment"
            android:textAllCaps="false"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/view_patient_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:textColor="@android:color/background_dark"
            android:background="@drawable/button_shape"
            android:ellipsize="none"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Check Appointment Schedule"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/view_patient_symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:background="@drawable/button_shape"
            android:ellipsize="none"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="View Patient Symptoms"
            android:textAllCaps="false"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/patient_update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:textColor="@android:color/background_dark"
            android:background="@drawable/button_shape"
            android:ellipsize="none"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="View Updates"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/send_patient_chats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:background="@drawable/button_shape"
            android:ellipsize="none"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Chats"
            android:textAllCaps="false"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>